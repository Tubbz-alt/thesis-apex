            </sequential>
         </datablocks>
      </stimulus>
      <stimulus id="stim4">
         <datablocks>
            <sequential>
               <datablock id="datablock4"/>
            </sequential>
         </datablocks>
      </stimulus>
      <stimulus id="stim5">
         <datablocks>
            <sequential>
               <datablock id="datablock5"/>
            </sequential>
         </datablocks>
      </stimulus>
      <stimulus id="stim6">
         <datablocks>
            <sequential>
               <datablock id="datablock6"/>
            </sequential>
         </datablocks>
      </stimulus>
      <stimulus id="stim7">
         <datablocks>
            <sequential>
               <datablock id="datablock7"/>
            </sequential>
         </datablocks>
      </stimulus>
      <stimulus id="stim8">
         <datablocks>
            <sequential>
               <datablock id="datablock8"/>
            </sequential>
         </datablocks>
      </stimulus>
      <stimulus id="stim9">
         <datablocks>
            <sequential>
               <datablock id="datablock9"/>
            </sequential>
         </datablocks>
      </stimulus>
   </stimuli>
    
   <connections>
        
      <connection>
            
         <from>
                
            <id>_ALL_</id>
                
            <channel>0</channel>
            
         </from>
            
         <to>
                
            <id>ampMain</id>
                
            <channel>0</channel>
            
         </to>
        
      </connection>
        
      <connection>
            
         <from>
                
            <id>_ALL_</id>
                
            <channel>0</channel>
            
         </from>
            
         <to>
                
            <id>ampMain</id>
                
            <channel>1</channel>
            
         </to>
        
      </connection>
        
      <connection>
            
         <from>
                
            <id>ampMain</id>
                
            <channel>0</channel>
            
         </from>
            
         <to>
                
            <id>wavdevice</id>
                
            <channel>0</channel>
            
         </to>
        
      </connection>
        
      <connection>
            
         <from>
                
            <id>ampMain</id>
                
            <channel>1</channel>
            
         </from>
            
         <to>
                
            <id>wavdevice</id>
                
            <channel>1</channel>
            
         </to>
        
      </connection>
    
   </connections>
    
   <calibration profile="outs-2">
        
      <stimuli>
            
         <stimulus id="stimcaltone"/>
        
      </stimuli>
        
      <parameters>
            
         <parameter id="gain0">
                
            <targetamplitude>97</targetamplitude>
                
            <calibrationamplitude>97</calibrationamplitude>
                
            <mute>-150.0</mute>
                
            <max>50</max>
            
         </parameter>
            
         <parameter id="gain1">
                
            <targetamplitude>97</targetamplitude>
                
            <calibrationamplitude>97</calibrationamplitude>
                
            <mute>-150.0</mute>
                
            <max>50</max>
            
         </parameter>
        
      </parameters>
    
   </calibration>
    
   <results>
        
      <xsltscript>slider.xsl</xsltscript>
        
      <saveprocessedresults>true</saveprocessedresults>
    
   </results>
    
   <general>
        
      <exitafter>true</exitafter>
        
      <autosave>true</autosave>
    
