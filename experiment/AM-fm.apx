      </datablock>
   </datablocks>
    
   <devices>
        
      <device id="wavdevice" xsi:type="apex:wavDeviceType">
            
         <driver>portaudio</driver>
            
         <card>default</card>
            
         <channels>2</channels>
            
         <samplerate>44100</samplerate>
        
      </device>
    
   </devices>
    
   <filters>
        
      <filter id="ampMain" xsi:type="apex:amplifier">
            
         <device>wavdevice</device>
            
         <channels>2</channels>
            
         <gain channel="0" id="gain0">0.0</gain>
            
         <gain channel="1" id="gain1">0.0</gain>
        
      </filter>
    
   </filters>
    
   <stimuli>
        
      <fixed_parameters/>
        
      <stimulus id="stimcaltone">
            
         <datablocks>
                
            <sequential>
                    
               <datablock id="datablockcaltone"/>
                
            </sequential>
            
         </datablocks>
        
      </stimulus>
    
      <stimulus id="stimref1">
         <datablocks>
            <sequential>
               <datablock id="datablockref1"/>
            </sequential>
         </datablocks>
      </stimulus>
      <stimulus id="stimref2">
         <datablocks>
            <sequential>
               <datablock id="datablockref2"/>
            </sequential>
         </datablocks>
      </stimulus>
      <stimulus id="stim1">
         <datablocks>
            <sequential>
               <datablock id="datablock1"/>
            </sequential>
         </datablocks>
      </stimulus>
      <stimulus id="stim2">
         <datablocks>
