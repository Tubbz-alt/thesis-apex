            </parameter>
        </parameters>
    </calibration>
    <results>
        <xsltscript>slider.xsl</xsltscript>
        <saveprocessedresults>true</saveprocessedresults>
        <subject></subject>
    </results>
    <interactive>
        <entry type="string" description="Subject's name" expression="/apex:apex/results[1]/subject[1]" default=""/>
    </interactive>
    <general>
