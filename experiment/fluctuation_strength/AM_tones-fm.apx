    <description>Magnitude estimation experiment to determine the dependence of modulation frequency on fluctuation strength for AM tones</description>
    <procedure xsi:type="apex:multiProcedureType">
        <parameters>
            <order>random</order>
        </parameters>
        <procedure xsi:type="apex:constantProcedureType" id="procedure1">
            <parameters>
                <presentations>4</presentations>
                <order>random</order>
                <choices select="2">2</choices>
                <pause_between_stimuli>800</pause_between_stimuli>
            </parameters>
            <trials>
                <trial id="trial11">
                    <screen id="screen1"/>
                    <stimulus id="stim1"/>
                    <standard id="stimref1"/>
                </trial>
                <trial id="trial12">
                    <screen id="screen1"/>
                    <stimulus id="stim2"/>
                    <standard id="stimref1"/>
                </trial>
                <trial id="trial13">
                    <screen id="screen1"/>
                    <stimulus id="stim3"/>
                    <standard id="stimref1"/>
                </trial>
                <trial id="trial14">
                    <screen id="screen1"/>
                    <stimulus id="stim4"/>
                    <standard id="stimref1"/>
                </trial>
                <trial id="trial15">
                    <screen id="screen1"/>
                    <stimulus id="stim5"/>
                    <standard id="stimref1"/>
                </trial>
                <trial id="trial16">
                    <screen id="screen1"/>
                    <stimulus id="stim6"/>
                    <standard id="stimref1"/>
                </trial>
                <trial id="trial17">
                    <screen id="screen1"/>
                    <stimulus id="stim7"/>
                    <standard id="stimref1"/>
                </trial>
                <trial id="trial18">
                    <screen id="screen1"/>
                    <stimulus id="stim8"/>
                    <standard id="stimref1"/>
                </trial>
                <trial id="trial19">
                    <screen id="screen1"/>
                    <stimulus id="stim9"/>
                    <standard id="stimref1"/>
                </trial>
            </trials>
        </procedure>
        <procedure xsi:type="apex:constantProcedureType" id="procedure2">
            <parameters>
                <presentations>4</presentations>
                <order>random</order>
                <choices select="2">2</choices>
                <pause_between_stimuli>800</pause_between_stimuli>
            </parameters>
            <trials>
                <trial id="trial21">
                    <screen id="screen1"/>
                    <stimulus id="stim1"/>
                    <standard id="stimref2"/>
                </trial>
                <trial id="trial22">
                    <screen id="screen1"/>
                    <stimulus id="stim2"/>
                    <standard id="stimref2"/>
                </trial>
